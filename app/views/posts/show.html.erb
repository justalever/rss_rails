<div class="max-w-3xl mx-auto my-10">

  <%= render @post %>

  <div class="pt-6 border-t mt-6">
    <%= link_to "Edit this post", edit_post_path(@post), class: "underline inline-block mr-2" %> |
    <%= link_to "Back to posts", posts_path, class: "underline inline-block" %>

    <%= button_to "Destroy this post", @post, method: :delete, class: "underline inline mr-2" %>
  </div>
</div>
